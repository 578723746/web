layout: heronone

<section>
  <div class="container">
    <div class="row fh5co-feature-2">
      <div class="col-md-9 col-md-offset3" id="fh5co-content">
        <h2>WiX @Model.Document.Title Release</h2>
        <p>To install the WiX Toolset please launch the installer below.</p>

        @foreach (var file in Model.Document.Files)
        {
          if (Dynamic.Defined(file.Promoted) && file.Promoted)
          {
          <div class="row">
            <div class="col-md-8 col-md-offset1">
              <h3>@Raw(file.Name)</h3>
              <p>@Raw(file.Title)</p>
              <p><a class="btn btn-primary btn-lg" href="/downloads/@Model.Document.Title/@file.Name">Launch &raquo;</a></p>
             </div>
           </div>
           }
        }
    </div>

    <div class="row fh5co-feature-2">
      <div class="col-md-9 col-md-offset3" id="fh5co-content">
        <h3>Additional Files</h3>
        <p>The following files are provided for special use cases. Please, only download these files if you require them.</p>
        <ul>
        @foreach (var file in Model.Document.Files)
        {
          if (Dynamic.Defined(file.Protected) && file.Protected)
          {
          <li>
            <h4>@file.Name</h4>
            <p>@Raw(file.Title)</p>
            <p><a class="btn btn-outline" href="/downloads/@Model.Document.Title/@file.Name">Download</a></p>
          </li>
          }
        }
        </ul>
    </div>
</section>
</div>
